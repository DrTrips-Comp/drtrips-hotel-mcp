{
  "$schema": "https://modelcontextprotocol.io/schema/server.json",
  "namespace": "io.github.drtrips-comp/drtrips-hotel-mcp",
  "name": "DrTrips Hotel MCP Server",
  "description": "MCP server for searching hotels on Booking.com with detailed information including pricing, photos, facilities, and reviews",
  "version": "1.0.0",
  "license": "MIT",
  "author": {
    "name": "DrTrips"
  },
  "homepage": "https://github.com/DrTrips-Comp/drtrips-hotel-mcp",
  "sourceUrl": "https://github.com/DrTrips-Comp/drtrips-hotel-mcp",
  "vendor": {
    "name": "DrTrips",
    "url": "https://github.com/DrTrips-Comp"
  },
  "deployment": {
    "type": "package",
    "package": {
      "type": "npm",
      "name": "drtrips-hotel-mcp",
      "registry": "https://registry.npmjs.org"
    }
  },
  "categories": [
    "travel",
    "search",
    "booking"
  ],
  "tags": [
    "hotel",
    "booking",
    "travel",
    "search",
    "booking.com"
  ],
  "config": {
    "required": {
      "RAPID_API_KEY": {
        "type": "string",
        "description": "RapidAPI key for Booking.com API access"
      }
    }
  }
}
